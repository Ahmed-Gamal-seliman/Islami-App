<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<include layout="@layout/background"/>
    <ImageView
        android:id="@+id/iv_sebha_body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/sebha_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/sebha_head"
        app:layout_constraintEnd_toEndOf="@id/iv_sebha_body"
        app:layout_constraintHeight_percent="0.37"
        app:layout_constraintStart_toStartOf="@id/iv_sebha_body"
        app:layout_constraintTop_toTopOf="parent"

        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/number_of_tassbeh"
    app:layout_constraintTop_toTopOf="@id/guideline1"
    app:layout_constraintBottom_toBottomOf="@id/guideline2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textStyle="bold"
    android:textColor="@color/element_text_color"
    android:textSize="25sp"

    />
    <TextView
        android:id="@+id/tv_number_of_tassbeh"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/start_zero_count"

        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:background="@drawable/rounded_box"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/element_text_color"
        />

    <Button
        android:id="@+id/btn_subhana_allah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subhana_allah"
        app:layout_constraintTop_toBottomOf="@id/tv_number_of_tassbeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"



        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />


</androidx.constraintlayout.widget.ConstraintLayout>