<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/background" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.7"
        app:cardCornerRadius="20dp"

        >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<!--    <include layout="@layout/quran_item"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        />-->
        <TextView
            android:id="@+id/tv_header_sura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ahmed"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/sura_text_header_content_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <View
        android:id="@+id/view_line"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="@id/tv_header_sura"
        app:layout_constraintStart_toStartOf="@id/tv_header_sura"
        app:layout_constraintTop_toBottomOf="@id/tv_header_sura"
        android:background="@drawable/line_shape"
        android:layout_marginBottom="15dp"
        />
<ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <TextView
        android:id="@+id/tv_sura_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="asfasfasfafsfasasdasdsadasf"
        android:layout_marginTop="15dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/sura_text_header_content_color"
        />
</ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>